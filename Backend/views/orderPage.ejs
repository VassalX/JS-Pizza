<% include common/header.ejs %>
<div class="cart">
    <div class="inner-panel">
        <div class="top-panel">
            <span class="order">Замовлення</span>
            <span class="badge number_cart">0</span>
            <a class="clear_cart">Очистити кошик</a>
        </div>
        <div id="cart" class="cart-list uneditable">

        </div>
        <div class="bottom-panel">
            <div class="money-part">
                <span>Сума замовлення</span>
                <span id="sum_money">0 грн.</span>
            </div>
            <div class="order-button-part">
                <form action="/">
                    <button type="submit" class="btn btn-default cart-button cart-edit">Редагувати</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid main-container">
    <div class="order-page-panel">
        <form class="row input-panel">
            <div class="col-xs-12 heading-1">1. Контактні дані</div>
            <div class="col-md-7">
                <div class="contacts-form">
                    <div class="form-group name row">
                        <label class="inputLabel col-sm-2">Ім'я</label>
                        <div class="col-sm-10">
                            <input type="text" name="name" class="form-control name" id="inputName"  placeholder="Ім'я Прізвище">
                            <span id="nameValid"></span>
                        </div>
                    </div>
                    <div class="form-group tel row">
                        <label class="inputLabel col-sm-2">Телефон</label>
                        <div class="col-sm-10">
                            <input type="tel" name="telephone" class="form-control tel" id="inputTel" placeholder="380987654321">
                            <span id="telValid"></span>
                        </div>
                    </div>
                    <div class="form-group adress row">
                        <label class="inputLabel col-sm-2">Адреса</label>
                        <div class="col-sm-10">
                            <input type=text name="adress" class="form-control adress" id="inputAdress" placeholder="Київ, вул. Григорія Сковороди, 2">
                            <span id="adressValid"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="bs-callout bs-callout-warning">
                    <h4>Інформація про замовлення</h4>
                    <p class="order-time"><b>Приблизний час доставки:</b>невідомий</p>
                    <p class="order-adress"><b>Адреса доставки:</b>невідома</p>
                </div>
            </div>
            <div class="col-xs-12 form-group next-panel">
                <button type="submit" name="submit" class="btn btn-lg btn-warning next-step" disabled>
                    Далі
                    <span class="glyphicon glyphicon-circle-arrow-right"></span>
                </button>
            </div>
        </form>
    </div>
</div>
<% include common/footer.ejs %>